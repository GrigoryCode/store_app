<div class="container">

  <h1>Show Item</h1>

    <div class="row">

      <div class="col-md-6">
        <%= image_tag(@product.image_url, class: "product-img") %>
      </div>

      <div class="col-md-6">
        <h3 class="my-3"><%= @product.title %></h3>
        <p><%= @product.description %></p>
        <p>$<%= @product.price %></p>

        <%= link_to 'Edit', edit_product_path(@product) %>
        <%= link_to 'Back', products_path %>

      </div>

    </div>

</div>



